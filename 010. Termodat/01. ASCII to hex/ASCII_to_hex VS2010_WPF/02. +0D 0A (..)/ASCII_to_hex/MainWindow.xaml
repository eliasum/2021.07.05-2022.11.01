<Window x:Class="ASCII_to_hex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        SizeToContent="WidthAndHeight" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    
    <Grid HorizontalAlignment="Stretch">
        <Label   Content="Output from Terminal:" 
                 Height="auto" Width="auto" 
                 HorizontalAlignment="Left" 
                 Margin="12,12,12,12" 
                 Name="label1" 
                 VerticalAlignment="Top" />
        <TextBox Height="auto" 
                 HorizontalAlignment="Left" 
                 Margin="12,40,12,12" 
                 Name="textBox1" 
                 VerticalAlignment="Top" 
                 Width="auto" 
                 TextChanged="textBox1_TextChanged" 
                 MinWidth="140" 
                 MaxWidth="500" 
                 AcceptsReturn="True" />
        <TextBox Height="auto" 
                 HorizontalAlignment="Left" 
                 Margin="12,68,12,12" 
                 Name="textBox2" 
                 VerticalAlignment="Top" 
                 Width="auto" 
                 MaxWidth="500"/>
    </Grid>
</Window>
